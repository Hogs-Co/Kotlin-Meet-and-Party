<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kotlinmeat">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".ChatLogActivity"
            android:theme="@style/Theme.KotlinMeat.ActionBar">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainScreenActivity" />
        </activity>
        <!-- android:theme="@style/Theme.KotlinMeat.NoActionBar" -->
        <activity
            android:name=".NewMessageActivity"
            android:theme="@style/Theme.KotlinMeat.ActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainScreenActivity" />
        </activity>
        <activity android:name=".MapPopupActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" /> <!-- activity android:name=".refreshActivity"></activity -->
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
       <activity android:name=".MainScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        -->

        <activity
            android:name=".MainScreenActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>
        <activity
            android:name=".ChoiceActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>
        <activity
            android:name=".NewuserActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>
        <activity
            android:name=".EditProfileActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>
        <activity
            android:name=".DisplayMapActivity"
            android:theme="@style/Theme.KotlinMeat.NoActionBar"/>
    </application>

</manifest>